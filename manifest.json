{

    "manifest_version": 2,
    "name": "No Tab Left Behind",
    "version": "0.0.4",
  
    "description": "Prevent duplicate tabs from dominating your browser window",
  
    "icons": {
      "24": "icons/browser-logo.svg",
      "36": "icons/browser-logo.svg",
      "48": "icons/browser-logo.svg",
      "96": "icons/browser-logo.svg"
    },
    "permissions": [ "tabs", "webNavigation" ],
    "background": {
        "scripts": [
          "browser-polyfill.js",
          "lodash.js",
          "background.js"
        ]
    },
    "browser_action": {
      "default_icon": "icons/tab48.png",
      "default_title": "No Tab Left Behind"
    }
  
  }